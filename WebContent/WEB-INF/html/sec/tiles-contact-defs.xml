<!DOCTYPE tiles-definitions PUBLIC
    "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
    "http://struts.apache.org/dtds/tiles-config_1_3.dtd">
<tiles-definitions>
    <definition name="sec.contact.baseTitledLayout"
                extends="html.baseTitledLayout">
        <put name="primaryMenu"
             value="/html/sec/primarynavigation.jsp" />
        <put name="secondaryMenu"
             value="/html/sec/secondarynavigation.jsp" />
    </definition>
    <definition name="contact.list.page.tiles"
                extends="sec.contact.baseTitledLayout">
        <put name="title"
             value="Contact List" />
        <put name="description"
             value="List all active contacts." />
        <put name="content"
             value="/html/sec/contact/contactlist.jsp" />
    </definition>
    <definition name="contact.view.page.tiles"
                extends="sec.contact.baseTitledLayout">
        <put name="title"
             value="View Contact" />
        <put name="description"
             value="View contact information." />
        <put name="content"
             value="/html/sec/contact/contactview.jsp" />
    </definition>
    <definition name="contact.create.page.tiles"
                extends="sec.contact.baseTitledLayout">
        <put name="title"
             value="Create Contact" />
        <put name="description"
             value="Create a new contact. Required fields are marked with an asterisk." />
        <put name="content"
             value="/html/sec/contact/contactcreate.jsp" />
    </definition>
    <definition name="contact.edit.page.tiles"
                extends="sec.contact.baseTitledLayout">
        <put name="title"
             value="Edit Contact" />
        <put name="description"
             value="Edit this contact. Required fields are marked with an asterisk." />
        <put name="content"
             value="/html/sec/contact/contactedit.jsp" />
    </definition>
    <definition name="contact.delete.page.tiles"
                extends="sec.contact.baseTitledLayout">
        <put name="title"
             value="Delete Contact" />
        <put name="description"
             value="Delete this contact." />
        <put name="content"
             value="/html/sec/contact/contactdelete.jsp" />
    </definition>
</tiles-definitions>
